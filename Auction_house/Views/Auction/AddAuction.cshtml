@model AuctionModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <h1>
        Add Auction
    </h1>

    @using (Html.BeginForm("AddAuction", "Auction", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Auction Name")
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description, "Auction Description")
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.StartPrice, "Auction Start Price")
            @Html.TextBoxFor(x => x.StartPrice, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Category, "Auction Category")
            @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Category, "Data zakończenia aukcji")
            @Html.TextBoxFor(x => x.EndDate, new { type = "datetime-local" })
        </div>

        <div class="form-group">
            <input type="file" name="file">

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Auction</button>
        </div>
    }
}
else
{
    <h1>
        Zaloguj się
    </h1>
}

